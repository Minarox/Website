---
import { SEO } from "astro-seo";
import { AstroFont } from "astro-font";
import Logo from '@assets/logo.svg';
import Banner from '@assets/banner.webp';
import Background from '@assets/background.svg';

const background: string = `url(${Background.src})`;
---

<!doctype html>
<html lang="fr">
<head>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<SEO
	title="Minarox.fr"
	description="Créateur de contenu depuis trop longtemps.",
	charset="UTF-8"
	openGraph={{
		basic: {
			title: "Minarox.fr",
			type: "website",
			url: Astro.url.origin,
			image: Banner.src
		},
		optional: {
			locale: "fr_FR",
		},
		image: {
			alt: "Minarox.fr banner",
			url: Banner.src,
			type: "image/webp"
		}
	}}
	twitter={{
		creator: "@Minarox_",
		card: "summary_large_image",
		site: Astro.url.origin,
		title: "Minarox.fr",
		description: "Créateur de contenu depuis trop longtemps.",
		image: Banner.src,
		imageAlt: "Minarox.fr banner",
	}}
	extend={{
		link: [
		{ rel: "icon", type: "image/svg+xml", href: Logo.src },
		{ rel: "sitemap", href: "/sitemap-index.xml" },
		],
		meta: [
		{ name: "viewport", content: "width=device-width,initial-scale=1.0" },
		{ name: "theme-color", content: "#040e29" },
		{ name: "keywords", content: "Vidéos, Stream, Live, Youtube, Twitch, Best-of, compilations, montage, projets, maintenance, site web" },
		{ name: "robots", content: "index, follow" },
		{ name: "language", content: "French" },
		{ name: "author", content: "Minarox" }
		],
	}}
	/>
	<AstroFont
	config={[
		{
			name: "Lato",
			src: [
			{
				style: "normal",
				weight: 400,
				path: "./public/font/Lato-Regular.ttf"
			},
			{
				style: "bold",
				weight: 700,
				path: "./public/font/Lato-Bold.ttf"
			},
			],
			preload: true,
			display: "swap",
			selector: "body",
			fallback: "sans-serif",
		},
		]}
		/>
	</head>
	<body>
		<slot />
	</body>
	</html>

	<style lang="scss" define:vars={{ background }}>
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		::-webkit-scrollbar {
			width: 14px;
		}

		::-webkit-scrollbar-thumb {
			box-shadow: inset 0 0 14px 14px white;
			border: solid 4px transparent;
			border-radius: 14px;
		}

		::-webkit-scrollbar-button {
			display: none;
		}

		body {
			position: relative;
			width: 100vw;
			height: 100vh;
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
			-webkit-user-select: none;
			-khtml-user-select: none;
			-moz-user-select: none;
			-o-user-select: none;
			user-select: none;
			scroll-behavior: smooth;
			overflow: overlay;
			font-family: "Lato", "Helvetica", "Arial", sans-serif;
			font-weight: 400;
			color: white;
			text-align: center;
			text-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
			background-image: var(--background);
			background-position: center center;
			background-repeat: no-repeat;
			background-size: cover;
			background-attachment: fixed;

			img {
				-webkit-user-drag: none;
				-khtml-user-drag: none;
				-moz-user-drag: none;
				-o-user-drag: none;
				user-drag: none;
			}
		}
	</style>
