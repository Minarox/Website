---
const ackee = {
	server: import.meta.env.ACKEE_SERVER,
	domainId: import.meta.env.ACKEE_ID,
	opts: {
		detailed: true,
		ignoreOwnVisits: false
	}
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<slot />
		<script type="text/partytown" src={`${ackee.server}/analytics.js`} data-ackee-server={ackee.server} data-ackee-domain-id={ackee.domainId} data-ackee-opts={JSON.stringify(ackee.opts)}></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
