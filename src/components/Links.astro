---
import { Icon } from 'astro-icon/components';

interface Props {
	social: {
		name: string;
		url: string;
		icon?: string;
	}[];
}

const { social } = Astro.props;
---

<section>
	{social.map((item) => (
		<a href={item.url} title={item.name} aria-label={item.name}>
			<Icon name={`fa6-brands:${item?.icon || item.name.toLowerCase()}`} />
			<p>{item.name}</p>
		</a>
	))}
</section>

<style lang="scss">
	section {
		display: grid;
		grid-template-columns: max-content 1fr;
		gap: 1rem 1.2rem;

		a {
			padding: 0.2rem 6rem;
			border-radius: 10rem;
			background-color: rgba($color: #000000, $alpha: 0.8);
			display: grid;
			grid-template-columns: subgrid;
			grid-column: 1 / 3;
			align-items: center;
			color: white;
			text-decoration: none;
			text-align: left;
			transform: scale(1);
			transition: transform 220ms;

			svg {
				width: 1.7rem;
				height: 1.7rem;
			}

			&:hover {
				transform: scale(1.08);
			}
		}
	}

